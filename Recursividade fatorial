int leValidaValorFatorial();
int calculaFatorial(int valorFat);

main() {
	int fatorial,valorFat,cont;
	valorFat=leValidaValorFatorial();
	fatorial=calculaFatorial(valorFat);
	system("cls");
	printf("%i!= %i\n",valorFat,fatorial);


	return 0;
}

int leValidaValorFatorial() {
	int valorFat;
	do {

		printf("Digite um numero que deseja calcular o fatorial: \n");
		scanf("%i",&valorFat);
		if(valorFat<0) {
			printf("Valor invalido, tente novamente...\n");
		}
	} while(valorFat<0);
	return valorFat;
}
int calculaFatorial(int valorFat) {
	int fatorial,cont;
	fatorial=1;
	for(cont=1; cont<=valorFat; cont++) {
		fatorial=fatorial*cont;
	}
	return fatorial;
}
